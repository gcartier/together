            (begin
              (display-error world (format "{a}" info))
              info)
          (retrieve-camera client)
          (reset-chronology)
          (uninstall-vista)
          (increase! fade-no)
          (let ((no fade-no))
            (define (fade?)
              (and (= no fade-no)
                   (is? (current-space) Avatar-Space)
                   (not (get-central-menu world))))
            
            (let ((thread
                    (new-thread
                      (lambda ()
                        (sleep 1)
                        (when (fade?)
                          (loop (for n from 1 to 100)
                                (with-task-mutex
                                  (lambda ()
                                    (when (fade?)
                                      (set-fade mainbar-pane (- 1. (* (cast <fl> n) .01)))
                                      (invalidate-view mainbar))))
                                (sleep .01)))
                        (set! fade-thread #f)
                        (when (fade?)
                          (fade-mainbar (point->point$fl$ (mouse-position window)) #t)))
                      'fade)))
              (set! fade-thread thread)
              (thread-start! thread)))
          (goto-space self 'avatar)
          (setup-visibility mainbar)
          (set-mode me 'player)
          (prepare-motion world)
          #f))))
  
  
